### Taken from https://gist.github.com/dianjuar/ee774561a8bc02b077989bc17424a19f
# Take screenshot by saving to specified folder
bindsym Print exec --no-startup-id maim "/home/$USER/Pictures/Screenshots/$(date)"
bindsym $mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/Screenshots/$(date)"
bindsym Shift+Print exec --no-startup-id maim --select "/home/$USER/Pictures/Screenshots/$(date)"
# Take screenshot by saving to clipboard
# xclip should be installed
bindsym Ctrl+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png


bindsym $mod+Escape exec i3lock -i ~/Pictures/arch.png -f -t


# Brightness control with traditional F7-F8 keys
# b-control script: ../scripts/brightness_control.pl
bindsym XF86MonBrightnessUp exec sudo b-control --incp 5
bindsym XF86MonBrightnessDown exec sudo b-control --decp 5

# Fan control
# f-control script: ../scripts/fan_control.pl
mode "$fan_control" {
  bindsym t exec sudo f-control turbo
  bindsym s exec sudo f-control silent
  bindsym b exec sudo f-control balance

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindcode $mod+71 mode "default"
}

bindcode $mod+71 mode "$fan_control"

# Boomer application
bindsym $mod+z exec boomer

# Binding Power button to custom suspend-i3 script
# suspend-i3: ../scripts/suspend-i3.sh
bindsym XF86PowerOff exec --no-startup-id suspend-i3

# Keyboard setup and binding for US, AZ, RU langs
exec --no-startup-id setxkbmap -layout us,az,ru

mode "$keyboard_layout" {
  bindsym u exec setxkbmap us
  bindsym a exec setxkbmap az

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindcode $mod+49 mode "default"
}

bindcode $mod+49 mode "$keyboard_layout"

# Sets up background wallpaper. I'm using feh for its simplicity unlike nitrogen
exec --no-startup-id feh --bg-scale ~/Pictures/wallhaven-blade-runner.png

# Start custom .Xmodmap script, which swaps Caps lock and R Ctrl keys
exec --no-startup-id xmodmap ~/dotfiles/.Xmodmap

# Start picom compositor. By default picom loads ~/.config/picom/picom.conf
# which is symlinked by ../picom/picom.conf
exec --no-startup-id picom

# Start polybar as status bar
exec_always --no-startup-id ~/dotfiles/scripts/launch-polybar.sh

# i3-gaps
gaps inner 5px
smart_gaps on